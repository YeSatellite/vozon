            android:theme="@style/AppThemeDark"/>
        <activity android:name=".ui.courier.transport.TransportDetailActivity"
            android:theme="@style/AppThemeDark"/>
        <activity android:name=".ui.courier.order.YOrderPDetailActivity"
            android:theme="@style/AppThemeDark"/>
        <activity android:name=".ui.courier.order.OfferNewActivity"
            android:theme="@style/AppThemeDark"/>
        <activity android:name=".ui.auth.YSignUpActivity" />
    </application>

</manifest>